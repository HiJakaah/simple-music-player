<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:SimpleMusicPlayer.Core">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.ListBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="BaseMetroListBox"
           TargetType="core:BaseListBox"
           BasedOn="{StaticResource VirtualisedMetroListBox}">
        <Setter Property="IsTextSearchEnabled"
                Value="False" />
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
    </Style>

</ResourceDictionary>